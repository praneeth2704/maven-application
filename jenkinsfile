pipeline {
    agent any
    stages {
        stage("clean up"){
            steps {
                deleteDir()
            }
        }
        stage("clone repo"){
            steps {
                sh "git clone https://github.com/praneeth2704/maven-application.git"
            }
        }
        stage("clean and build"){
            steps {
                dir("maven-application"){
                    sh "mvn clean install"
                }
            }
        }
        stage("test"){
            steps {
                dir("maven-application"){
                    sh "mvn test"
                }
            }
        }
	stage("completed"){
	    steps {
		sh "echo build completed"
		}
	}
    }
}
